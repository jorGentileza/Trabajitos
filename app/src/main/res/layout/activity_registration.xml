<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RegistrationActivity">

    <LinearLayout
        android:id="@+id/tittleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/closeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/close"/>

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="160dp"
            android:src="@drawable/logo" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/personalInfoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/white_panel"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tittleLayout">

        <TextView
            android:id="@+id/personalInfoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:singleLine="false"
            android:fontFamily="@font/titles_font"
            android:text="Registro"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="48sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_color"
            android:fontFamily="@font/inputs_font"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Nombres"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <EditText
            android:id="@+id/lastNameEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_color"
            android:ems="10"
            android:fontFamily="@font/inputs_font"
            android:gravity="center_horizontal"
            android:hint="Apellidos"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <EditText
            android:id="@+id/birthEditTextDate"
            android:layout_width="300dp"
            android:fontFamily="@font/inputs_font"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_color"
            android:focusable="false"
            android:clickable="true"
            android:hint="Fecha de Nacimiento"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="date" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_color"
            android:ems="10"
            android:fontFamily="@font/inputs_font"
            android:gravity="center_horizontal"
            android:hint="Correo Electronico"
            android:inputType="textEmailAddress" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_color"
            android:ems="10"
            android:fontFamily="@font/inputs_font"
            android:gravity="center_horizontal"
            android:hint="Numero de Teléfono"
            android:inputType="phone" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_color"
            android:ems="10"
            android:fontFamily="@font/inputs_font"
            android:gravity="center_horizontal"
            android:hint="Contraseña"
            android:inputType="textPassword" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_color"
            android:ems="10"
            android:fontFamily="@font/inputs_font"
            android:gravity="center_horizontal"
            android:hint="Confirme Contraseña"
            android:inputType="textPassword" />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/sUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Ingresar"
            android:fontFamily="@font/titles_font"
            android:background="@drawable/simple_buttons"
            android:layout_marginTop="32dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>